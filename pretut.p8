__lua__
function _init()
 make_player()
end

function _update()
 move_player()
end

function _draw()
 cls()
 draw_player()
end

function make_player()
 px=64
 py=64
 psprite=1
end

function move_player()
 if (btn(0)) px-=1
 if (btn(1)) px+=1
 if (btn(2)) py-=1
 if (btn(3)) py+=1
end

function draw_player()
 spr(psprite, px, py)
end

--utils

function clearchar()
 for x=0,7 do
  for y=0,7 do
   mset(x,y,0)
  end
 end
end

function getcharvals()
 local bm=""
 local hm=""
 local row=0
 for y=0,7 do
  for x=0,7 do
   row+=mget(x,y)*(2^x)
  end
  bm..=chr(row)
  hm..=tohex(row)
  row=0
 end
 return hm,bm,escp_bin_str(bm)
end

function tohex(num)
 local h=tostr(num,1)
	return sub(h,5,6)
end

function escp_bin_str(s)
 local out=""
 for i=1,#s do
  local c  = sub(s,i,i)
  local nc = ord(s,i+1)
  local pr = (nc and nc>=48 and nc<=57) and "00" or ""
  local v=c
  if(c=="\"") v="\\\""
  if(c=="\\") v="\\\\"
  if(ord(c)==0) v="\\"..pr.."0"
  if(ord(c)==10) v="\\n"
  if(ord(c)==13) v="\\r"
  out..= v
 end
 return out
end

function toclipboard()
 if (outtype=="hex") then
  printh(hchar,"@clip")
 else
  printh(escp_bin_str(bchar),"@clip")
 end
end


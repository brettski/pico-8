--beam laser

function newbeam(_x,_y)
 add(plr.beam, {
  x=_x,
  y=_y,
  life=32,
  draw=function(self)
   circ(self.x+5,self.y,0.5,8)
  end,
  upd=function(self)
   self.y-=2
   self.life-=1
   if self.life<1 then
    del(plr.beam, self)
   end
   --todo collision detect
  end,
 })
end

function firebeam()
 if (plr.bdelay>0
  or #plr.beam>=plr.bmax) then
  plr.bdelay-=1
  return
 end
 plr.bdelay=plr.beam.delay
 newbeam(plr.x,plr.y)
end

function updbeam()
 for b in all(plr.beam) do
  b:upd()
 end
end

function drawbeam()
 for b in all(plr.beam) do
  b:draw()
 end
end

function gsqr_color(n)
 if n<=4 then
  return 11
 elseif n<=16 then
  return 3
 elseif n<=64 then
  return 2
 elseif n<=256 then
  return 8
 elseif n<=1024 then
  return 14
 elseif n<=2048 then
  return 7
 else
  assert(false,"out of range n")
 end 
end

function draw_square(_x,_y)
 local relx=(_x-1)*32
 local rely=(_y-1)*32
 local val=field[_x][_y]
 if val>0 then
  rectfill(relx+1,rely+1,relx+30,rely+30,gsqr_color(val))
  --pset(relx,rely,11)
  local len=#tostr(val)
  local off=14-flr(len/2)
  --if (#tostr(val) == 3) off+=1
  --if (#tostr(val) == 4) off-=3
 	print(val,relx+off-len,rely+13,7)
 end
end

function draw_squares()
 for i=1,4 do
 	for j=1,4 do
			draw_square(i,j)
 	end
 end

end

pico-8 cartridge // http://www.pico-8.com
version 22
__lua__

function _init()
 len=32 --r
 x0=64
 y0=64
 x1=x0+len
 y1=y0
 angle=0
 lines={}
end

function _update()
 angle_d=5
 if btnp(2) then
  angle+=1
 end
 if btnp(3) then
  angle-=1
 end
 --need to add or remove
 --angle_d number of lines
 --in direction of btnp
 for i=a,a0 do
  a=angle/360
  l={
   x=x0+cos(a)*len,
   y=y0+sin(a)*len,
   dur=40,
  }
  add(lines,l)
 end
end

function _draw()
 cls(6)
 cursor(1,1,3)
 print("0   is 12 o'clock")
 print("270 is  3 o'clock")
 print("circle drawn clockwise")
 print("drawing 185 to 270")
 for ln in all(lines) do
  line(x0,y0,ln.x,ln.y,0)
  if ln.dur<1 then
   del(lines,ln)
  else
   ln.dur-=1
  end
 end
end
